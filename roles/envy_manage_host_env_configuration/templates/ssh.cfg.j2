{% for instance in env_instances %}
Host {{ instance.name }} {{ hostvars[instance.name]['ansible_ssh_host'] }}
  Port {{ instance.ssh_port_map | regex_replace('\:22','') }}
  ControlPath /tmp/{{ instance.name }}-%h-%r

{% endfor %}

Host *
  HostName 127.0.0.1
  User vagrant
  IdentityFile  ssh/vagrant.private
  ControlMaster auto
  ControlPath /tmp/%h-%p-%r
  ControlPersist 5m
  StrictHostKeyChecking no
